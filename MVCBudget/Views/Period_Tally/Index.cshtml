@model MVCBudget.Models.Period_Tally

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<h4>Period_Tally</h4>
<hr />
@using (Html.BeginForm("Create", "Period_Tally", FormMethod.Post))
{ 
    <div>   
        <label for="IntDateDropdown">Select Date:</label> 
        <select id="IntDateDropdown" name="IntDateDropdown"> 
            @foreach (var item in Model.Date) 
            { 
                <option value="@item.Key">@item.Value.ToShortDateString()</option> 
            } 
        </select> 
    </div>
    <div class="form-group"> <label asp-for="Selected" class="control-label"></label> <select asp-for="Selected" class="form-control" asp-items="@(new SelectList(Model.Date, "Key", "Value"))"></select> <span asp-validation-for="Selected" class="text-danger"></span> </div>
    <div> 
        <h4>Add New String and Decimal Pairs</h4> 
        <div id="dynamicControls"> 
            @foreach (var item in Model.Period_Data) 
            { 
                <div> <input type="text" name="StringKeys" value="@item.Key" /> 
                    <input type="text" name="DecimalValues" value="@item.Value" /> 
                </div> 
            } 
        </div> 
        <button type="button" id="addControl">Add More</button> 
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section scripts { <script src="~/js/indextp.js" type="text/javascript"></script>}
