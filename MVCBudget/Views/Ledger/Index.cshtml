@model MVCBudget.Models.Ledger

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View</h1>

<h4>Ledger</h4>
<hr />
@using (Html.BeginForm("Create", "Ledger", FormMethod.Post))
{ 
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
